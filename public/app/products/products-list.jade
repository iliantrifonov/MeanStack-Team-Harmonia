.container
    .row
        .col-md-2 Search
        .col-md-4
            input.form-control(type="text", placeholder="Search", ng-model="search")
        .col-md-2 Sort
        .col-md-4
            select.form-control(ng-model="sort")
                option(value=" " ng-selected="'true'") Default
                option(value="title") Title
                option(value="categories") Category
    br
    table.table
        tr
            th Title
            th Categories
            th Description
            th Image
            th Stock
            th Stars
            th Price
        tr(ng-repeat="product in products | filter: search | orderBy: sort")
            td
                a(href="#/products/{{ product._id }}") {{ product.name }}
            td
                p(ng-repeat="category in product.categories") {{category}}
            td {{ product.description }}
            td
                img(ng-src="{{ product.picture }}")
            td  {{ product.stock }}
            td  {{ product.stars }}
            td  {{ product.price }}